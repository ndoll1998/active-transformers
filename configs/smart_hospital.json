{
    "name": "smart-hospital",
    "task": "nested-bio-tagging",

    "data": {
        "dataset": "./data/smart_hospital.py",
        "text_column": "tokens",
        "label_column": "ner_tags",
        "min_sequence_length": 0,
        "max_sequence_length": 512
    },
    
    "model": {
        "pretrained_ckpt": "../smarthospital/medical-longformer"
    },
    
    "trainer": {
        "incremental": true,
        "lr": 2e-5,
        "weight_decay": 0.01,
        "batch_size": 8,
        "max_epochs": 500,
        "epoch_length": null,
        "min_epoch_length": 8,
        "early_stopping_patience": 5,
        "accuracy_threshold": 2.0
    },

    "active": {
        "strategy": "random",
        "budget": 250,
        "query_size": 25
    }
}
