{
    "name": "german-legal-ner",
    "task": "bio-tagging",

    "data": {
        "dataset": "elenanereiss/german-ler",
        "text_column": "tokens",
        "label_column": "ner_tags",
        "begin_tag_prefix": "B-",
        "in_tag_prefix": "I-",
        "min_sequence_length": 0,
        "max_sequence_length": 128
    },
    
    "model": {
        "pretrained_ckpt": "distilbert-base-german-cased"
    },
    
    "trainer": {
        "incremental": true,
        "lr": 2e-5,
        "weight_decay": 0.01,
        "batch_size": 32,
        "max_epochs": 25,
        "epoch_length": null,
        "min_epoch_length": 16,
        "early_stopping_patience": 15,
        "accuracy_threshold": 2.0
    },

    "active": {
        "strategy": "random",
        "budget": 250,
        "query_size": 25
    }
}
